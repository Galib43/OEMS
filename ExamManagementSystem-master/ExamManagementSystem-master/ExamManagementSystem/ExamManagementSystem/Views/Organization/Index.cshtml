@model Models.SearchCriteria.OrganizationSearchCriteria
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Share/_LayoutShare.cshtml";
}
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Dashboard
            <small>Control panel</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">Dashboard</li>lg
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <!-- Main row -->
        <div class="row">
            <!-- Left col -->
            <section class="col-lg-12">
                <!-- Chat box -->
                <div class="box box-success">
                    <div class="box-header">
                        <h3 class="box-title">Organization Information</h3>
                    </div>
                    @*<div class="container">*@
                    @using (Html.BeginForm("Index", "Organization", FormMethod.Get, new { @class = "form-horizontal" }))
                    {
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label for="Name" class="col-lg-3 control-label">Name</label>
                                    <div class="col-lg-9">
                                        <input id="searchTextbox" name="Name" class="form-control" type="text" placeholder="Name" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="Code" class="col-lg-3 control-label">Code</label>
                                    <div class="col-lg-9">
                                        <input id="searchTextbox" name="Code" class="form-control" type="text" placeholder="Code" />
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label for="Address" class="col-lg-3 control-label">Address</label>
                                    <div class="col-lg-9">
                                        <input id="searchTextbox" name="Address" class="form-control" type="text" placeholder="Address" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="ContactNo" class="col-lg-3 control-label">Contact No</label>
                                    <div class="col-lg-9">
                                        <input id="searchTextbox" name="ContactNo" class="form-control" type="text" placeholder="ContactNo" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-3 pull-right">
                                        <input id="searchButton" type="submit" value="Search" class="btn-success form-control" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    <hr />
                    <p>
                        @Html.ActionLink("Create New", "Entry", "Organization")
                    </p>
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped table-hover">
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Code)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Address)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ContactNo)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Courses)
                                </th>
                                <th>Action</th>
                            </tr>
                            @foreach (var item in Model.OrganizationLists)
                            {
                                using (Html.BeginForm("Delete", "Organization", new { id = item.Id }))
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Code)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Address)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ContactNo)
                                        </td>
                                        <td>
                                            @*@Html.ActionLink(item.Courses.Count.ToString(), "Index", "Course", new {id = item.Id }, null)*@
                                            <a href="~/Course?OrganizationId=@item.Id">@item.Courses.Count</a>
                                        </td>

                                        <td>
                                            <a href="@Url.Action("Edit", "Organization", new {id = item.Id})" c class="btn btn-primary">

                                                <span class="glyphicon glyphicon-edit"></span>
                                            </a>
                                            <a href="@Url.Action("Details", "Organization", new {id = item.Id})" c class="btn btn-success">

                                                <span class="glyphicon glyphicon-list-alt"></span>
                                            </a>
                                            <button type="submit" class="btn btn-danger" value="" onclick=" return confirm('are you sure? you want to delete this id=@item.Id' );">
                                                <span class="glyphicon glyphicon-trash"></span>
                                            </button>
                                        </td>
                                    </tr>
                                }
                            }
                        </table>
                    </div>

                </div>
            </section>
        </div>
        <!-- /.row (main row) -->
    </section>
    <!-- /.content -->
</div>





