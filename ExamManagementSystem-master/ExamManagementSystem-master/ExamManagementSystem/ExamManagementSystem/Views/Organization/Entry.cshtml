
@model Models.ViewModels.OrganizationEntryVm

@{
    Layout = "~/Views/Share/_LayoutShare.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Dashboard
            <small>Control panel</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">Dashboard</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <!-- Main row -->
        <div class="row">
            <!-- Left col -->
            <section class="col-lg-12">
                <!-- Chat box -->
                <div class="box box-success">
                    <div class="box-header">
                       <h3 class="box-title">Organization Entry</h3>
                    </div>
                    <div class="box-body">
                        <!-- Form Start -->
                        <form method="post">
                            <div class="form-horizontal">
                                <div class="form-group">
                                    <label for="Name" class="col-lg-2 control-label">Name</label>
                                    <div class="col-lg-10">
                                        @Html.TextBoxFor(c => c.Name, new {@class = "form-control", placeholder = "Name"})
                                        @Html.ValidationMessageFor(c => c.Name, null, new {@class = "text-danger"})
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label for="Code" class="col-lg-2 control-label">Code</label>
                                    <div class="col-lg-10">
                                        @Html.TextBoxFor(c => c.Code, new {@class = "form-control", placeholder = "Code", id = "OrganizationCode", @readonly = "readonly"})
                                        @Html.ValidationMessageFor(c => c.Code, null, new {@class = "text-danger"})
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label for="Address" class="col-lg-2 control-label">Address</label>
                                    <div class="col-lg-10">
                                        @Html.TextBoxFor(c => c.Address, new {@class = "form-control", placeholder = "Address"})
                                        @Html.ValidationMessageFor(c => c.Address, null, new {@class = "text-danger"})
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label for="ContactNo" class="col-lg-2 control-label">Contact No</label>
                                    <div class="col-lg-10">
                                        @Html.TextBoxFor(c => c.ContactNo, new {@class = "form-control", placeholder = "Contact No"})
                                        @Html.ValidationMessageFor(c => c.ContactNo, null, new {@class = "text-danger"})
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label for="About" class="col-lg-2 control-label">About</label>
                                    <div class="col-lg-10">
                                        @Html.TextAreaFor(c => c.About, new {@class = "form-control", placeholder = "About", rows = "3"})
                                        @Html.ValidationMessageFor(c => c.About, null, new {@class = "text-danger"})
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-lg-offset-2 col-lg-10">
                                        <button type="submit" class="pull-right btn btn-primary">Save</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                        <!--Form Closed-->
                    </div>
                </div>
           </section>    
        </div>
        <!-- /.row (main row) -->

    </section>
    <!-- /.content -->
</div>

@section scripts{
<script src="~/Scripts/AppScript/OrganizationEntry/OrganizationDetail.js"></script>
}


