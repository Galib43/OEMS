@model Models.SearchCriteria.CitySearchCriteria
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Share/_LayoutShare.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Dashboard
            <small>Control panel</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">Dashboard</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <!-- Main row -->
        <div class="row">
            <!-- Left col -->
            <section class="col-lg-12">
                <!-- Chat box -->
                <div class="box box-success">

                    <div class="box-body">
                        <!-- Form Start -->
                        <p>
                            @Html.ActionLink("Create New", "Entry")
                        </p>
                        <table class="table">
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Name)
                                </th>
                                @*<th>
                                        @Html.DisplayNameFor(model => model.CountryId)
                                    </th>*@
                                <th></th>
                            </tr>
                            @foreach (var item in Model.City)
                            {
                                using (Html.BeginForm("Delete", "City", new { id = item.Id }))
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Name)
                                        </td>
                                        @*<td>
                                                @Html.DisplayFor(modelItem => item.CountryId)
                                            </td>*@
                                        <td>
                                            <a href="@Url.Action("Edit", "City", new {id = item.Id})" c class="btn btn-primary">

                                                <span class="glyphicon glyphicon-edit"></span>
                                            </a>
                                            @*<a href="@Url.Action("Details", "City", new {id = item.Id})" c class="btn btn-success">

                                                <span class="glyphicon glyphicon-list-alt"></span>
                                            </a>*@
                                            <button type="submit" class="btn btn-danger" value="" onclick=" return confirm('are you sure? you want to delete this id=@item.Id' );">
                                                <span class="glyphicon glyphicon-trash"></span>
                                            </button>
                                        </td>
                                    </tr>
                                }
                            }
                        </table>
                        <!--Form Closed-->
                    </div>
                </div>
            </section>
        </div>
        <!-- /.row (main row) -->
    </section>
    <!-- /.content -->
</div>
