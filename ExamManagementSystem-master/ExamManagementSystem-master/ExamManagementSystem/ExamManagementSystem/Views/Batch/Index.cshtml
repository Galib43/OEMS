@model Models.SearchCriteria.BatchSearchCriteria

@{
    Layout = "~/Views/Share/_LayoutShare.cshtml";
}
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Dashboard
            <small>Control panel</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">Dashboard</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <!-- Main row -->
        <div class="row">
            <!-- Left col -->
            <section class="col-lg-12">
                <!-- Chat box -->
                <div class="box box-success">
                    <div class="box-header">
                        <h3 class="box-title"> All Batch Info</h3>
                    </div>
                    <div class="box-body">
                        <!-- Form Start -->
                        @using (Html.BeginForm("Index", "Batch", FormMethod.Get, new { @class = "form-horizontal" }))
                        {
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="Description" class="col-md-3 control-label">Description</label>
                                        <div class="col-md-9">
                                            <input id="searchTextbox" name="Description" class="form-control" type="text" placeholder="Description" />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="BatchNo" class="col-md-3 control-label">Batch No</label>
                                        <div class="col-md-9">
                                            <input id="searchTextbox" name="BatchNo" class="form-control" type="text" placeholder="Batch No" />
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="StartDate" class="col-md-3 control-label">Start Date</label>
                                        <div class="col-md-9">
                                            <input id="searchTextbox" name="StartDate" class="form-control" type="date" />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="EndDate" class="col-md-3 control-label">End Date</label>
                                        <div class="col-md-9">
                                            <input id="searchTextbox" name="EndDate" class="form-control" type="date" />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-md-3 pull-right">
                                            <input id="searchButton" type="submit" value="Search" class="btn-success form-control" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                        <hr />
                        <p>
                            @Html.ActionLink("Create New", "Entry")
                        </p>
                        <div class="table-responsive">
                            <table class="table table-bordered table-striped table-hover">
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Description)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Name)
                                    </th>

                                    <th>
                                        @Html.DisplayNameFor(model => model.StartDate)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.EndDate)
                                    </th>
                                    @*<th>
                                            @Html.DisplayNameFor(model => model.OrganizationId)
                                        </th>*@
                                    <th></th>
                                </tr>
                                @foreach (var item in Model.ListOfBatch)
                                {
                                    using (Html.BeginForm("Delete", "Batch", new { id = item.Id }))
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Description)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Name)
                                            </td>

                                            <td>
                                                @Html.DisplayFor(modelItem => item.StartDate)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.EndDate)
                                            </td>

                                            <td>
                                                <a href="@Url.Action("Edit", "Batch", new {id = item.Id})" c class="btn btn-primary">

                                                    <span class="glyphicon glyphicon-edit"></span>
                                                </a>
                                                @*<a href="@Url.Action("Details", "City", new {id = item.Id})" c class="btn btn-success">

                                                        <span class="glyphicon glyphicon-list-alt"></span>
                                                    </a>*@
                                                <button type="submit" class="btn btn-danger" value="" onclick=" return confirm('are you sure? you want to delete this id=@item.Id' );">
                                                    <span class="glyphicon glyphicon-trash"></span>
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                }
                            </table>
                        </div>
                    </div>
                    <!--Form Closed-->
                </div>

            </section>
        </div>
        <!-- /.row (main row) -->
    </section>
    <!-- /.content -->
</div>
