

@model Models.ViewModels.ExamEntryVm

@{
    Layout = "~/Views/Share/_LayoutShare.cshtml";
}


<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Dashboard
            <small>Control panel</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">Dashboard</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <!-- Main row -->
        <div class="row">
            <!-- Left col -->
            <section class="col-lg-12">
                <!-- Chat box -->
                <div class="box box-success">
                    <div class="box-header">
                        <h3 class="box-title">Exam Entry</h3>
                      
                    </div>
                    <div class="box-body">
                        <!-- Form Start -->
                        <form method="post" enctype="multipart/form-data">
                            <div class="form-horizontal">
                                <div class="form-group">
                                    <label for="Organization" class="col-md-2 control-label">Organization</label>
                                    <div class="col-md-10">
                                        @Html.DropDownListFor(c => c.OrganizationId, Model.OrganizationListItem, "Select Organization", new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="Course" class="col-md-2 control-label">Course</label>
                                    <div class="col-md-10">
                                        @Html.DropDownListFor(c => c.CourseId, new List<SelectListItem>(), new { @class = "form-control", id = "courseListDD" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="ExamType" class="col-md-2 control-label">Exam Type</label>
                                    <div class="col-md-10">
                                        @Html.DropDownListFor(c => c.ExamTypeId, Model.ExamTypeListItem, "Select Exam Type", new { @class = "form-control", id = "examTypeID"  })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="Code" class="col-md-2 control-label">Code</label>
                                    <div class="col-md-10">
                                        @Html.TextBoxFor(c => c.Code, new { @class = "form-control", placeholder = "Code", id = "ExamId", @readonly = "readonly" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="Topic" class="col-md-2 control-label">Topic</label>
                                    <div class="col-md-10">
                                        @Html.TextBoxFor(c => c.Topic, new { @class = "form-control", placeholder = "Exam Topic" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="FUllMarks" class="col-md-2 control-label">Full Marks</label>
                                    <div class="col-md-10">
                                        @Html.TextBoxFor(c => c.FullMarks, new { @class = "form-control", placeholder = "Full Marks" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                        <button type="submit" class="btn btn-primary pull-right">Submit</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                  
                        <!--Form Closed-->
                    </div>
                </div>
            </section>
        </div>
        <!-- /.row (main row) -->

    </section>
    <!-- /.content -->
</div>



@section scripts{
   
<script src="~/Scripts/AppScript/ExamEntry/Exam.js"></script>
}