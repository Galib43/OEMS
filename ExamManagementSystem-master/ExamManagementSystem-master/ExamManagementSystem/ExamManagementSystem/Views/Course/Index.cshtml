@model Models.SearchCriteria.CourseSearchCriteria

@{
    ViewBag.tittle = "Index";
    Layout = "~/Views/Share/_LayoutShare.cshtml";
}
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Dashboard
            <small>Control panel</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">Dashboard</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <!-- Main row -->
        <div class="row">
            <!-- Left col -->
            <section class="col-lg-12">
                <!-- Chat box -->
                <div class="box box-success">
                    <div class="box-header">
                        <h3 class="box-title">All Courses Information</h3>
                    </div>
                    <div class="box-body">
                        <!-- Form Start -->
                        @using (Html.BeginForm("Index", "Course", FormMethod.Get, new { @class = "form-horizontal" }))
                        {
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="Name" class="col-md-3 control-label">Name</label>
                                        <div class="col-md-9">
                                            <input id="searchTextbox" name="Name" class="form-control" type="text" placeholder="Name" />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="Code" class="col-md-3 control-label">Code</label>
                                        <div class="col-md-9">
                                            <input id="searchTextbox" name="Code" class="form-control" type="text" placeholder="Code" />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="Organization" class="col-md-3 control-label">Organization</label>
                                        <div class="col-md-9">
                                            @Html.DropDownListFor(c => c.OrganizationId, Model.OrganizationListItem, "Select Organization", new { @class = "form-control" })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="DurationForm" class="col-md-3 control-label">Duratin</label>
                                                <div class="col-md-9">
                                                    <input id="searchTextbox" name="DurationForm" class="form-control" type="text" />
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="DurationTo" class="col-md-3 control-label">To</label>
                                                <div class="col-md-9">
                                                    <input id="searchTextbox" name="DurationTo" class="form-control" type="text" />
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="CreditForm" class="col-md-3 control-label">Credit</label>
                                                <div class="col-md-9">
                                                    <input id="searchTextbox" name="CreditForm" class="form-control" type="text" />
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="CreditTo" class="col-md-3 control-label">To</label>
                                                <div class="col-md-9">
                                                    <input id="searchTextbox" name="CreditTo" class="form-control" type="text" />
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="Tag" class="col-md-4 control-label">Tag</label>
                                        <div class="col-md-8">
                                            <input id="searchTextbox" name="Tag" class="form-control" type="text" placeholder="Tag" />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-md-3 pull-right">
                                            <input id="searchButton" type="submit" value="Search" class="btn-success form-control" />
                                        </div>
                                    </div>
                                </div>
                            </div>

                        }
                        <hr />
                        <p>
                            @Html.ActionLink("Create New Course", "CourseEntry")
                        </p>
                        <div class="table-responsive">
                            <table class="table table-bordered table-striped table-hover">
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Name)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Code)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Duration)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Credit)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Outline)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Tag)
                                    </th>
                                    <th></th>
                                </tr>
                                @foreach (var item in Model.Course)
                                {
                                   
                                        using (Html.BeginForm("Delete", "Course", new { id = item.Id }))

                                     {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Name)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Code)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Duration)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Credit)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Outline)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Tag)
                                            </td>

                                            <td>
                                                <a href="@Url.Action("CourseInformation", "Course", new {id = item.Id})" c class="btn btn-primary">

                                                    <span class="glyphicon glyphicon-edit"></span>
                                                </a>
                                                <a href="@Url.Action("Details", "Course", new {id = item.Id})" c class="btn btn-success">

                                                        <span class="glyphicon glyphicon-list-alt"></span>
                                                    </a>
                                                <button type="submit" class="btn btn-danger" value="" onclick=" return confirm('are you sure? you want to delete this id=@item.Id' );">
                                                    <span class="glyphicon glyphicon-trash"></span>
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                }
                            </table>
                        </div>
                    </div>
                    <!--Form Closed-->
                </div>

            </section>
        </div>
        <!-- /.row (main row) -->
    </section>
    <!-- /.content -->
</div>
